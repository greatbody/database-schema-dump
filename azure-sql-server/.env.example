# Copy to .env and fill in your Azure SQL details
SQLSERVER_HOST=yourserver.database.windows.net
SQLSERVER_DATABASE=your_database
SQLSERVER_USERNAME=your_username
SQLSERVER_PASSWORD=your_password

# Optional overrides
ODBC_DRIVER=ODBC Driver 18 for SQL Server
SQLSERVER_ENCRYPT=yes
SQLSERVER_TRUST_SERVER_CERT=no
SQLSERVER_CONNECTION_TIMEOUT=30
